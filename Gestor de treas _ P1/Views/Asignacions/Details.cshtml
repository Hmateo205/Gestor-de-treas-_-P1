@model Gestor_de_treas___P1.Models.Asignacion

@{
    ViewData["Title"] = "Details";
}

<style>
  body {
    font-family: Arial, sans-serif;
    background-color: #F5F5F5; /* Beige light */
  }

  h1 {
    color: #228B22; /* Blue cerulean */
    text-align: center;
    margin-bottom: 20px;
  }

  .assignment-details {
    background-color: #E6F2FF; /* Beige cream */
    padding: 20px;
    border-radius: 10px;
    margin-top: 20px;
  }

  .assignment-details label {
    display: block;
    margin-bottom: 5px;
    font-weight: bold;
  }

  .assignment-details p {
    margin-bottom: 0;
  }
</style>

<h1>Assignment Details</h1>

<div class="assignment-details">
  <div>
    <b>Task:</b> @Model.Task.Name<br />
    <b>User:</b> @Model.User.FullName<br />
    <b>Status:</b> @Model.Status<br />
    <b>Due Date:</b> @Model.DueDate<br />
    <b>Description:</b> @Model.Description<br />
  </div>

  <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
  <a asp-action="Index">Back to List</a>
</div>
