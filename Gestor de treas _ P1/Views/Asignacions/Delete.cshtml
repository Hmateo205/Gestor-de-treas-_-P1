@model Gestor_de_treas___P1.Models.Asignacion

@{
    ViewData["Title"] = "Delete";
}
<h1>Delete Assignment</h1>

<div class="delete-confirmation">
  <p>Are you sure you want to delete this assignment?</p>
  <p><strong>Task:</strong> @Model.Task.Name</p>
  <p><strong>User:</strong> @Model.User.FullName</p>

  <form asp-action="Delete" asp-route-id="@Model.Id">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index">Cancel</a>
  </form>
</div>

<style>
  body {
    font-family: Arial, sans-serif;
    background-color: #F5F5F5; /* Beige light */
  }

  h1 {
    color: #228B22; /* Blue cerulean */
    text-align: center;
    margin-bottom: 20px;
  }

  .delete-confirmation {
    background-color: #E6F2FF; /* Beige cream */
    padding: 20px;
    border-radius: 10px;
    margin-top: 20px;
    width: 500px;
    margin: 0 auto;
  }

  .delete-confirmation p {
    margin-bottom: 10px;
  }

  .delete-confirmation button {
    background-color: #228B22; /* Blue cerulean */
    color: white;
    padding: 10px 20px;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    transition: background-color 0.3s;
  }

  .delete-confirmation button:hover {
    background-color: #191970; /* Blue navy dark */
  }
</style>
